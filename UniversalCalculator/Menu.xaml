<Page
    x:Class="Calculator.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<TextBlock Text="Universal Calculator" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="60"/>

		<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
			<Button Content="Math Calculator" Width="500" Height="100" Margin="0,10,0,0" FontSize="50" Click="Button_Click"  />
			<Button Content="Mortgage Calculator" Width="500" Height="100" Margin="0,10,0,0" FontSize="50" Click="Button_Click_1"/>
			<Button Content="Currency Calculator" Width="500" Height="100" Margin="0,10,0,0" FontSize="50" Click="Button_Click_2" />
			<Button Content="Trip Calculator" Width="500" Height="100" Margin="0,10,0,0" FontSize="50" Click="Button_Click_3" />
			<Button Content="Exit" Width="500" Height="100" Margin="0,10,0,0" FontSize="50" Click="Button_Click_4" />
			
		</StackPanel>
		<Image Source="Images/abacus.PNG" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Top" MaxHeight="150"/>

	</Grid>
</Page>
